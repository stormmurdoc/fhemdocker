<?xml version="1.0"?>
<device>
  <developer>justme</developer>
  <product>RGB LED controller</product>
  <pwrdownmode>false</pwrdownmode>
    <config>
    <reg name="PowerOn" id="14">
      <param name="PowerOnState" type="bin" dir="out">
        <size>5</size>
      </param>
      <param name="State" type="bin" dir="out">
        <position>0</position>
        <size>1</size>
        <default>0</default>
        <verif>(0|1|2|3)</verif>
      </param>
      <param name="Brightness" type="bin" dir="out">
        <position>1</position>
        <size>1</size>
      </param>
      <param name="Color" type="bin" dir="out">
        <position>2</position>
        <size>3</size>
      </param>
    </reg>
    <reg name="Repeater mode" id="16" hwmask="08">
      <param name="Maximum hop" type="num">
        <size>1</size>
        <default>0</default>
        <verif>([1-9]|1[0-5])</verif>
      </param>
    </reg>
    <reg name="DMX" id="18" hwmask="04" swversion="00020001">
      <param name="DMX Base" type="num" dir="out">
        <size>1</size>
      </param>
    </reg>
  </config>
  <regular>
    <reg name="RGB" id="11">
      <endpoint name="RGBlevel" type="bin" dir="out">
        <size>3</size>
      </endpoint>
      <endpoint name="Red" type="bin" dir="out">
        <position>0</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Green" type="bin" dir="out">
        <position>1</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Blue" type="bin" dir="out">
        <position>2</position>
        <size>1</size>
      </endpoint>
    </reg>
    <reg name="RGB" id="11" swversion="00020000" hwmask="40">
      <endpoint name="RGBlevel" type="bin" dir="out">
        <size>4</size>
      </endpoint>
      <endpoint name="Red" type="bin" dir="out">
        <position>0</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Green" type="bin" dir="out">
        <position>1</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Blue" type="bin" dir="out">
        <position>2</position>
        <size>1</size>
      </endpoint>
      <endpoint name="White" type="bin" dir="out">
        <position>3</position>
        <size>1</size>
      </endpoint>
    </reg>
    <reg name="RGB" id="11" swversion="00020000" hwmask="80">
      <endpoint name="RGBlevel" type="bin" dir="out">
        <size>5</size>
      </endpoint>
      <endpoint name="Red" type="bin" dir="out">
        <position>0</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Green" type="bin" dir="out">
        <position>1</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Blue" type="bin" dir="out">
        <position>2</position>
        <size>1</size>
      </endpoint>
      <endpoint name="White" type="bin" dir="out">
        <position>3</position>
        <size>1</size>
      </endpoint>
      <endpoint name="White2" type="bin" dir="out">
        <position>4</position>
        <size>1</size>
      </endpoint>
    </reg>
    <reg name="IRrecv" id="12" hwmask="02">
      <endpoint name="IRCommand" type="bin" dir="inp">
        <size>5</size>
      </endpoint>
      <endpoint name="Type" type="bin" dir="inp">
        <position>0</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Value" type="bin" dir="inp">
        <position>1</position>
        <size>4</size>
      </endpoint>
    </reg>
    <reg name="Temp" id="13">
      <endpoint name="InternalTemperature" type="num" dir="inp">
        <size>4</size>
        <units>
          <unit name="C" factor="1" offset="0"/>
        </units>
      </endpoint>
    </reg>
    <reg name="Cmd" id="15">
      <endpoint name="Command" type="bin" dir="out">
        <size>6</size>
      </endpoint>
      <endpoint name="Cmd" type="bin" dir="out">
        <position>0</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Args" type="bin" dir="out">
        <position>1</position>
        <size>5</size>
      </endpoint>
    </reg>
    <reg name="Cmd" id="15" swversion="00020000">
      <endpoint name="Command" type="bin" dir="out">
        <size>10</size>
      </endpoint>
      <endpoint name="Cmd" type="bin" dir="out">
        <position>0</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Args" type="bin" dir="out">
        <position>1</position>
        <size>9</size>
      </endpoint>
    </reg>
    <reg name="Bri" id="17" hwmask="01">
      <endpoint name="Brightness" type="num" dir="inp">
        <size>2</size>
      </endpoint>
    </reg>
    <reg name="LedPower" id="19" hwmask="10">
      <endpoint name="LedPower" type="num" dir="inp">
        <size>2</size>
        <units->
          <unit name="V" factor="0.001" offset="0"/>
        </units->
      </endpoint>
    </reg>
    <reg name="IRsend" id="20" hwmask="20">
      <endpoint name="IRSendCommand" type="num" dir="out">
        <size>9</size>
      </endpoint>
      <endpoint name="Type" type="bin" dir="out">
        <position>0</position>
        <size>1</size>
      </endpoint>
      <endpoint name="Value" type="bin" dir="out">
        <position>1</position>
        <size>4</size>
      </endpoint>
      <endpoint name="Addr" type="bin" dir="out">
        <position>5</position>
        <size>4</size>
      </endpoint>
    </reg>
  </regular>
</device>
